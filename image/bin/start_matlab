#!/bin/bash

HOSTID=$(ifconfig eth0 | grep HWaddr | perl -pe "s/.+HWaddr ([\w:]+)/\$1/g ; s/://g")

[[ -z "$MATLAB_VERSION" ]] || \
    (grep -q $HOSTID /usr/local/MATLAB/$MATLAB_VERSION/licenses/* || \
     /usr/local/MATLAB/$MATLAB_VERSION/bin/activate_matlab.sh) &&
     matlab -softwareopengl -desktop
